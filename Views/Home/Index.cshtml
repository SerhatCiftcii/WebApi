@model List<ProductDTO>

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">Fiyat: <strong>@product.Price ₺</strong></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
